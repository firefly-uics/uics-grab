<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 工作的bean -->
	<bean id="h3CJob" class="com.uics.grab.job.H3CJob" >
	</bean>
	<!-- 工作的bean -->

	<!-- job的配置开始 -->
	<bean id="h3CJobDetail"
		  class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="h3CJob" />
		</property>
		<property name="targetMethod">
			<value>sync</value>
		</property>
	</bean>
	<!-- job的配置结束 -->


	<!-- 调度的配置开始 -->
	<bean id="crontestJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="h3CJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0/30 * * * * ?</value>  <!-- Cron表达式“10 */1 * * * ?”意为：从10秒开始，每1分钟执行一次。  -->
		</property>
	</bean>
	<!-- 调度的配置结束 -->


	<!-- 启动触发器的配置开始 -->
	<bean name="startQuertz" lazy-init="false" autowire="no"
		  class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="crontestJobTrigger" />
			</list>
		</property>
	</bean>
	<!-- 启动触发器的配置结束 -->


</beans>